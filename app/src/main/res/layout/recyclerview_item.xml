<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:card-view="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card-view:cardElevation="3dp"
    card-view:cardMaxElevation="3dp"
    card_view:cardCornerRadius="3dp"
    card-view:cardPreventCornerOverlap="true"
    card-view:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/news_img"
            android:textSize="18sp"
            android:textColor="@color/primary_text_material_light"
            android:layout_marginLeft="10dp"
            android:lineSpacingMultiplier="1.2"
            android:transitionName="@string/share_title"
            android:text="2015年知乎盐CLub那些美好的人和美好的事"/>

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:transitionName="@string/shared_img"/>
        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/news_img"
            android:visibility="gone"
            android:background="@color/lighter_gray"/>   -->
    </RelativeLayout>
</android.support.v7.widget.CardView>
